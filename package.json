{
  "name": "zds-editor",
  "version": "0.6.2",
  "description": "Markdown editor used on Zeste de Savoir",
  "main": "lib/index.js",
  "scripts": {
    "watch": "watchify src/index.js -t babelify -s Editor -o 'exorcist -b lib/ lib/bundle.js.map > lib/bundle.js' -d",
    "build:bundle": "browserify src/index.js -t babelify -g uglifyify -s Editor -d | exorcist -b lib/ lib/bundle.js.map > lib/bundle.js",
    "build:babel": "babel -d lib/ src/ --source-maps inline",
    "build": "npm run build:bundle && npm run build:babel",
    "doc": "jsdoc -R ./README.md -P ./package.json -d ./doc/ . ./src/*.js",
    "lint": "eslint index.js src/*.js test/*.js",
    "test": "browserify -t babelify ./test/*.js | tape-run | faucet",
    "clean": "rm lib/*",
    "prepublish": "npm run lint && npm run build"
  },
  "keywords": [
    "markdown",
    "editor",
    "codemirror"
  ],
  "author": "Sandhose <quentingliech@gmail.com>",
  "bugs": "https://github.com/sandhose/zds-editor/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/sandhose/zds-editor.git"
  },
  "license": "MIT",
  "dependencies": {
    "babel-polyfill": "^6.5.0",
    "codemirror": "^5.11.0",
    "keycode": "^2.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-preset-es2015": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "eslint": "^3.11.1",
    "eslint-config-airbnb-base": "^10.0.1",
    "eslint-plugin-import": "^2.2.0",
    "exorcist": "^0.4.0",
    "faucet": "0.0.1",
    "jsdoc": "^3.4.0",
    "simulant": "^0.2.0",
    "sinon": "^1.17.3",
    "tape": "^4.4.0",
    "tape-run": "^2.1.3",
    "uglifyify": "^3.0.1",
    "watchify": "^3.7.0"
  }
}
