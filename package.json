{
  "name": "zds-editor",
  "version": "0.1.0",
  "description": "Markdown editor used on Zeste de Savoir",
  "main": "index.js",
  "scripts": {
    "watch": "watchify -t babelify index.js -o 'exorcist dist/bundle.js.map > dist/bundle.js' -d",
    "build": "browserify -t babelify index.js --debug | exorcist dist/bundle.js.map > dist/bundle.js",
    "doc": "jsdoc -R ./README.md -P ./package.json -d ./doc/ .",
    "lint": "eslint index.js"
  },
  "keywords": [
    "markdown",
    "editor",
    "codemirror"
  ],
  "author": "Sandhose <quentingliech@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "codemirror": "^5.11.0"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^5.0.0",
    "exorcist": "^0.4.0",
    "jsdoc": "^3.4.0",
    "uglifyify": "^3.0.1",
    "watchify": "^3.7.0"
  }
}
